import SConsider

Import('*')

env = SConsider.cloneBaseEnv()
conf = SConsider.Configure(env)
if conf.CheckCHeader('cmqc.h') and conf.CheckMultipleLibs(
        ['mqic', 'mqiz', 'mqmcs']):
    conf.env.Append(CPPDEFINES='HAS_MQM')
env = conf.Finish()

buildSettings = {}
if 'HAS_MQM' in env['CPPDEFINES']:
    buildSettings[packagename] = {
        'linkDependencies': [
            packagename + '.mqic',
            packagename + '.mqiz',
            packagename + '.mqmcs',
        ],
    }
    buildSettings['mqic'] = {
        'public': {
            'appendUnique': {
                'LIBS': ['mqic'],
            },
        },
    }
    buildSettings['mqiz'] = {
        'public': {
            'appendUnique': {
                'LIBS': ['mqiz'],
            },
        },
    }
    buildSettings['mqmcs'] = {
        'public': {
            'appendUnique': {
                'LIBS': ['mqmcs'],
            },
        },
    }

SConsider.createTargets(packagename, buildSettings)
